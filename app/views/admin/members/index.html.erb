<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Job title</th>
      <th>Company</th>
      <th>Email</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.job_title %></td>
        <td><%= member.organisation %></td>
        <td><%= member.email %></td>
        <td><%= member.priority %></td>
        <td><%= link_to 'Show', admin_member_path(member) %></td>
        <td><%= link_to 'Edit', edit_admin_member_path(member) %></td>
        <td><%= link_to 'Destroy', admin_member_path(member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_admin_member_path %>


<div class="well">
  <h3>Import a CSV File</h3>
  <%= bootstrap_form_tag url: admin_members_import_path, multipart: true do |f| %>
  <%= f.file_field :file %>
  <%= f.submit "Import CSV" %>
  <% end %>
</div>
