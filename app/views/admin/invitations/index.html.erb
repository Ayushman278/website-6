<p id="notice"><%= notice %></p>

<h1>Invitations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Notes</th>
      <th>HTML</th>
      <th>plain_text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.name %></td>
        <td><%= invitation.notes %></td>
        <td><%= invitation.html %></td>
        <td><%= invitation.plain_text %></td>
        <td><%= link_to 'Show', admin_invitation_path(invitation) %></td>
        <td><%= link_to 'Edit', edit_admin_invitation_path(invitation) %></td>
        <td><%= link_to 'Destroy', admin_invitation_path(invitation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

