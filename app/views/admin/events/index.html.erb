<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>Details</th>
      <th>Invitations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td style='max-width: 350px; overflow: hidden; font-size: 8px;'><%= event.details %></td>
        <td>
          <% event.event_mails.each do |mail| %>
            <li><%= link_to mail.name, admin_mailing_path(mail) %></li>
          <% end %>
        </td>
        <td><%= link_to 'Show', admin_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: {confirm: 'Are you sure' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
