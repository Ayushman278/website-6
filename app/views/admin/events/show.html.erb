<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <%= render "shared/event", event: @event %>

</p>
<p>
  <strong>Invitations</strong>
  <% @event.invitations.each do |invitation| %>
    <li><%= link_to invitation.name, admin_invitation_path(invitation) %></li>
  <% end %>
</p>
<%= link_to 'Edit', edit_admin_event_path(@event) %> |
<%= link_to 'Back', admin_events_path %>
