<%= form_for( [:admin, event_mail],
              url: (event_mail.new_record? ? admin_mailings_path : admin_mailing_path(event_mail) )
            ) do |f| %>
  <% if event_mail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event_mail.errors.count, "error") %> prohibited this event mail from being saved:</h2>

      <ul>
      <% event_mail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form_group'>
    <%= f.label :event_id, 'Event' %>
    <%= f.select(:event_id, options_for_select(
          Event.all.map do |event|
            [ event.name, event.id ]
          end
          # [
          # ['Attending', 'attending'],
          # ['Not Attending', 'not_attending']
          # ]
          ),  {default: event_mail.event},
              {class: "form-control input-lg"} ) %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control input-lg"  %>
  </div>

  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, class: "form-control input-lg"  %>
  </div>

  <div class="form-group">
    <%= f.label :includes_rsvp %>
    <%= f.check_box :includes_rsvp, class: "form-control input-lg"  %>
  </div>

  <div class="form-group">
    <%= f.label :html_template %>
    <%= f.text_area :html_template, class: "form-control input-lg"  %>
  </div>

  <div class="form-group">
    <%= f.label :plain_text_template %>
    <%= f.text_area :plain_text_template, class: "form-control input-lg"  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
