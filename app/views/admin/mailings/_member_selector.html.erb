<h3>Send to:</h3>
<input type="checkbox" id="selectAll" value="selectAll"> Select / Deselect All<br>
<div class="pre-scrollable">
  <table class='table table-striped table-condensed small'>
    <thead>
      <tr>
        <th>Select</th>
        <th>Priority</th>
        <th class="col-md-4">ID (email)</th>
        <th class="col-md-4">Name</th>
        <th class="col-md-2">Job title</th>
        <th class="col-md-2">Company</th>
      </tr>
    </thead>

    <tbody>
     <% done_members = event_mail.logs.map{|log| log.member_id}
        members.each do |member|
          p '============='
          done = done_members.include?(member.id)
          p member.id
          p done %>
          <tr <%= 'class=info' if done %>>
            <td><%= check_box_tag 'members[]', member.id, !done %></td>
            <td><%= member.priority %></td>
            <td class="col-md-4"><%= member.id %> (<%= member.email %>)</td>
            <td class="col-md-4"><%= "#{member.first_name} #{member.last_name}" %></td>
            <td class="col-md-2"><%= member.job_title %></td>
            <td class="col-md-2"><%= member.organisation %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
<script>
$('#selectAll').click(function() {
  console.log('clicked')
  if (this.checked) {
    $(':checkbox').each(function() {
      this.checked = true;
    });
  } else {
    $(':checkbox').each(function() {
      this.checked = false;
    });
  }
});
</script>
