<h3>RSVPs for this event:</h3>

<table class='table table-striped table-condensed small'>
  <thead>
    <tr>
      <th>#</th>
      <th>Member</th>
      <th>Status</th>
      <th>Updated At</th>
      <th>Created At</th>
    </tr>
  </thead>

  <tbody>
    <% rsvps_for_event.sort_by{|rsvp| rsvp.status.downcase}.each_with_index do |rsvp, i| %>
      <tr>
        <td><%= i+1 %>: (#<%= rsvp.id %>)</td>
        <td>
          <%= rsvp.member.first_name%> <%=rsvp.member.last_name %>
          "<%= rsvp.member.email %>"
        </td>
        <td><%= rsvp.status.capitalize if rsvp.status %></td>
        <td><%= rsvp.updated_at %></td>
        <td><%= rsvp.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
