<p id="notice"><%= notice %></p>

<h1>Event Mail Logs</h1>

<table class='table table-striped table-condensed small'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Event Mail</th>
      <th>Member</th>
      <th>Email Used</th>
    </tr>
  </thead>

  <tbody>
    <% @event_mail_logs.sort_by(&:date).reverse.each do |log| %>
      <tr>
        <td><%= log.date.strftime("%d-%b-%y - %H:%M") %></td>
        <td><%=
          id = log.event_mail_id
          link_to "Event Mail ##{id}", admin_mailing_path(id: id)
        %></td>
        <td><%=
          id = log.member_id
          link_to "Member ##{id}", admin_member_path(id: id)
         %></td>
        <td><%= log.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
