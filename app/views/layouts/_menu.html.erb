<%

menu =
[ { name: 'Home',             route: root_path     },
  { name: 'Join CACIN',       route: sign_up_path  },
  { name: 'Contact Us',       route: contact_us_path }]

admin =
[ { name: ' | ',              route: ""                         },
  { name: 'Admin:',           route: admin_root_path            },
  { name: 'Events',           route: admin_events_path          },
  { name: 'Members',          route: admin_members_path         },
  { name: 'Mailings',         route: admin_mailings_path        },
  { name: 'Event Mail Logs',  route: admin_event_mail_logs_path }]

menu += admin if user_signed_in?

%>


<nav role="navigation" class="navbar navbar-default">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
            <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a href="/">
          <span class="nav navbar-nav navbar-left">
            <%= image_tag('logo_navbar.png') %>
          </span>
          <span class="navbar-brand" style="padding: 16px 4px;">
            | CACIN
          </span>
        </a>
    </div>
    <!-- Collection of nav links and other content for toggling -->
    <div id="navbarCollapse" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% menu.each do |item| %>
            <li class=<%= "active" if current_page?(item[:route]) %>>
              <a href="<%= item[:route] %>">
                <%= item[:name] %>
              </a>
            </li>
          <% end %>
        </ul>
    </div>
</nav>
